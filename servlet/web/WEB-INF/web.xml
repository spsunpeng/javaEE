<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--就配置了一个com.mashibing.MyServlet 和 /hello的对应关系，非要麻烦地起个名字myServlet-->
    <servlet>
        <servlet-name>myServlet</servlet-name>
        <servlet-class>com.mashibing.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servletLife</servlet-name>
        <servlet-class>com.mashibing.ServletLife</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletLife</servlet-name>
        <url-pattern>/servletLife</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletMethod</servlet-name>
        <servlet-class>com.mashibing.ServletMethod</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletMethod</servlet-name>
        <url-pattern>/method</url-pattern>
    </servlet-mapping>

</web-app>